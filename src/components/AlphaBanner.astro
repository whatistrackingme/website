---
import type { Locale } from "../i18n/config";
import { t } from "../i18n/utils";

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
---

<div class="bg-[#1a3a2a] py-2.5">
  <div class="mx-auto flex max-w-5xl items-center gap-3 px-4">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 shrink-0 text-[#6ee7a0]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z" />
      <line x1="12" y1="9" x2="12" y2="13" />
      <line x1="12" y1="17" x2="12.01" y2="17" />
    </svg>
    <p class="text-sm text-[#a3e4b8]">
      {t(locale, "banner.text")}
    </p>
  </div>
</div>
