---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<svg
  viewBox="0 0 120 120"
  fill="none"
  stroke="currentColor"
  stroke-width="2"
  stroke-linecap="round"
  stroke-linejoin="round"
  class:list={["w-16 h-16 lg:w-20 lg:h-20", className]}
  aria-hidden="true"
>
  <!-- Bell body -->
  <path
    d="M60 22 C60 22 43 28 43 50 C43 58 40 64 34 72 L86 72 C80 64 77 58 77 50 C77 28 60 22 60 22"
  ></path>
  <!-- Bell rim highlight -->
  <line x1="34" y1="72" x2="86" y2="72"></line>
  <!-- Bell bottom curve (clapper) -->
  <path d="M50 72 C50 80 54 85 60 85 C66 85 70 80 70 72"></path>
  <!-- Bell top nub -->
  <circle cx="60" cy="18" r="3" fill="currentColor"></circle>
  <!-- Notification dot -->
  <circle cx="80" cy="32" r="8" fill="var(--color-primary)" opacity="0.8"
  ></circle>
  <circle cx="80" cy="32" r="8"></circle>
  <!-- Vibration arcs left -->
  <path d="M26 48 C22 53 22 60 26 65"></path>
  <path d="M20 43 C14 51 14 62 20 70"></path>
  <!-- Vibration arcs right -->
  <path d="M94 48 C98 53 98 60 94 65"></path>
  <path d="M100 43 C106 51 106 62 100 70"></path>
</svg>
