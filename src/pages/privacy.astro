---
import { getCollection, render } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";

const locale = "en" as const;

const pages = await getCollection("pages");
const privacyPage = pages.find((p) => p.id === "privacy-en");
const { Content } = privacyPage ? await render(privacyPage) : { Content: null };

const proseClasses =
  "prose prose-lg max-w-3xl mx-auto prose-headings:text-primary prose-headings:tracking-wider prose-a:text-primary prose-blockquote:border-l-primary/40 prose-blockquote:bg-base-200/50 prose-blockquote:rounded-r-lg prose-blockquote:py-1 prose-blockquote:px-4 prose-strong:text-base-content";
---

<BaseLayout locale={locale} title="Privacy Policy â€” WhatIsTracking.Me" description="What data WhatIsTracking.Me collects, how it is used, and your rights.">
  <section class="py-16 px-4">
    <div class="max-w-3xl mx-auto mb-10">
      <h1 class="text-4xl font-bold font-display text-primary tracking-wider">Privacy Policy</h1>
      <p class="mt-2 text-base-content/60 text-sm">Last updated: February 2026</p>
    </div>
    {Content && (
      <div class={proseClasses}>
        <Content />
      </div>
    )}
  </section>
</BaseLayout>
