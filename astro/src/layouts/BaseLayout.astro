---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import type { Locale } from "../i18n/config";
import { t } from "../i18n/utils";

interface Props {
  locale: Locale;
  title?: string;
  description?: string;
}

const { locale, title, description } = Astro.props;
const siteTitle = title ?? t(locale, "site.title");
const siteDescription = description ?? t(locale, "site.description");
---

<html lang={locale} data-theme="mocha">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={siteDescription} />
    <meta name="generator" content={Astro.generator} />
    <title>{siteTitle}</title>
    <script is:inline>
      (function () {
        const theme = localStorage.getItem("theme") || "mocha";
        document.documentElement.setAttribute("data-theme", theme);
      })();
    </script>
  </head>
  <body class="min-h-screen flex flex-col bg-base-100 text-base-content">
    <Navbar locale={locale} />
    <main class="flex-1">
      <slot />
    </main>
    <Footer locale={locale} />
  </body>
</html>
