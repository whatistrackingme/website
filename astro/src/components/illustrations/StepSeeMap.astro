---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<svg
  viewBox="0 0 120 120"
  fill="none"
  stroke="currentColor"
  stroke-width="2"
  stroke-linecap="round"
  stroke-linejoin="round"
  class:list={["w-16 h-16 lg:w-20 lg:h-20", className]}
  aria-hidden="true"
>
  <!-- Map rectangle -->
  <rect x="15" y="20" width="90" height="70" rx="4"></rect>
  <!-- Map fold lines -->
  <line x1="45" y1="20" x2="45" y2="90" stroke-dasharray="4 3" opacity="0.3"
  ></line>
  <line x1="75" y1="20" x2="75" y2="90" stroke-dasharray="4 3" opacity="0.3"
  ></line>
  <!-- Road lines -->
  <path d="M15 55 C30 55 35 45 50 45 C65 45 70 65 90 65 L105 65" opacity="0.4"
  ></path>
  <path d="M35 90 C35 75 50 70 60 60 C70 50 75 35 80 20" opacity="0.4"></path>
  <!-- Location pin -->
  <path
    d="M60 35 C60 35 48 42 48 52 C48 60 60 72 60 72 C60 72 72 60 72 52 C72 42 60 35 60 35"
    fill="var(--color-primary)"
    opacity="0.25"></path>
  <path
    d="M60 35 C60 35 48 42 48 52 C48 60 60 72 60 72 C60 72 72 60 72 52 C72 42 60 35 60 35"
  ></path>
  <!-- Pin center dot -->
  <circle cx="60" cy="50" r="4" fill="var(--color-primary)" opacity="0.6"
  ></circle>
</svg>
