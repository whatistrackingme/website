---
import type { Locale } from "../i18n/config";
import { t } from "../i18n/utils";

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
---

<section class="relative overflow-hidden flex items-center">
  <!-- Gradient background -->
  <div
    class="absolute inset-0 bg-gradient-to-br from-base-200 via-base-100 to-base-200"
  >
  </div>

  <!-- Radial glow behind the logo mark -->
  <div
    class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[36rem] h-[36rem] rounded-full bg-primary/10 blur-3xl animate-pulse-glow pointer-events-none"
  >
  </div>

  <!-- Decorative logo watermark -->
  <div
    class="logo-mark absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-72 h-72 lg:w-96 lg:h-96 opacity-[0.04] pointer-events-none"
    aria-hidden="true"
  >
  </div>

  <!-- Subtle grid pattern -->
  <div
    class="absolute inset-0 opacity-[0.03] pointer-events-none"
    style="background-image: linear-gradient(var(--color-base-content) 1px, transparent 1px), linear-gradient(90deg, var(--color-base-content) 1px, transparent 1px); background-size: 4rem 4rem;"
  >
  </div>

  <!-- Content -->
  <div class="relative z-10 w-full max-w-4xl mx-auto px-4 py-24 sm:py-32 lg:py-40 text-center">
    <div class="animate-fade-in-up">
      <h1
        class="text-3xl sm:text-6xl lg:text-7xl font-extrabold tracking-wider leading-tight"
      >
        {t(locale, "hero.title")}
      </h1>
    </div>

    <p
      class="mt-6 text-lg sm:text-xl max-w-2xl mx-auto text-base-content/70 leading-relaxed animate-fade-in-up"
      style="animation-delay: 0.15s;"
    >
      {t(locale, "hero.subtitle")}
    </p>

    <div class="mt-10 flex flex-wrap justify-center gap-4 animate-fade-in-up" style="animation-delay: 0.3s;">
      <a
        href="https://app.staging.whatistracking.me/"
        class="btn btn-primary btn-lg text-lg gap-2 shadow-lg shadow-primary/20 hover:shadow-xl hover:shadow-primary/30 hover:-translate-y-0.5 transition-all duration-300"
        target="_blank"
        rel="noopener noreferrer"
      >
        {t(locale, "hero.cta")}
        <svg
          class="h-5 w-5"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <line x1="5" y1="12" x2="19" y2="12"></line>
          <polyline points="12 5 19 12 12 19"></polyline>
        </svg>
      </a>
      <a
        href="https://github.com/whatistrackingme/poc"
        class="btn btn-outline btn-lg text-lg gap-2 hover:-translate-y-0.5 transition-all duration-300"
        target="_blank"
        rel="noopener noreferrer"
      >
        <svg
          class="h-5 w-5"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="currentColor"
        >
          <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0 0 24 12c0-6.63-5.37-12-12-12z"/>
        </svg>
        {t(locale, "hero.viewSource")}
      </a>
    </div>
  </div>
</section>
