---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<svg
  viewBox="0 0 120 120"
  fill="none"
  stroke="currentColor"
  stroke-width="2"
  stroke-linecap="round"
  stroke-linejoin="round"
  class:list={["w-16 h-16 lg:w-20 lg:h-20", className]}
  aria-hidden="true"
>
  <!-- Bell body -->
  <path
    d="M60 15 C60 15 45 20 45 45 L45 65 L35 75 L85 75 L75 65 L75 45 C75 20 60 15 60 15"
  ></path>
  <!-- Bell bottom curve -->
  <path d="M50 75 C50 82 54 88 60 88 C66 88 70 82 70 75"></path>
  <!-- Bell top nub -->
  <circle cx="60" cy="13" r="3" fill="currentColor"></circle>
  <!-- Notification dot -->
  <circle cx="78" cy="28" r="8" fill="var(--color-primary)" opacity="0.8"
  ></circle>
  <circle cx="78" cy="28" r="8"></circle>
  <!-- Vibration arcs left -->
  <path d="M28 45 C24 50 24 60 28 65"></path>
  <path d="M22 40 C16 48 16 62 22 70"></path>
  <!-- Vibration arcs right -->
  <path d="M92 45 C96 50 96 60 92 65"></path>
  <path d="M98 40 C104 48 104 62 98 70"></path>
</svg>
