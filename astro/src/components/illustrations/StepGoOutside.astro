---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<svg
  viewBox="0 0 120 120"
  fill="none"
  stroke="currentColor"
  stroke-width="2"
  stroke-linecap="round"
  stroke-linejoin="round"
  class:list={["w-16 h-16 lg:w-20 lg:h-20", className]}
  aria-hidden="true"
>
  <!-- Door frame -->
  <rect x="35" y="30" width="30" height="60" rx="2"></rect>
  <!-- Door opening outward -->
  <path
    d="M65 30 L80 38 L80 82 L65 90"
    fill="var(--color-primary)"
    opacity="0.15"></path>
  <path d="M65 30 L80 38 L80 82 L65 90"></path>
  <!-- Door handle -->
  <circle cx="74" cy="60" r="2" fill="currentColor"></circle>
  <!-- Sun arc with rays -->
  <path d="M95 35 A20 20 0 0 0 75 15"></path>
  <line x1="85" y1="10" x2="85" y2="5"></line>
  <line x1="95" y1="15" x2="99" y2="11"></line>
  <line x1="100" y1="25" x2="105" y2="23"></line>
  <!-- Ground line -->
  <line x1="25" y1="90" x2="95" y2="90"></line>
  <!-- Small footstep marks -->
  <ellipse
    cx="82"
    cy="88"
    rx="3"
    ry="1.5"
    fill="var(--color-primary)"
    opacity="0.4"></ellipse>
  <ellipse
    cx="90"
    cy="86"
    rx="3"
    ry="1.5"
    fill="var(--color-primary)"
    opacity="0.3"></ellipse>
</svg>
